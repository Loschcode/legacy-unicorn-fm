
<% if (req.session.error) { %>
    <div class="notice notice-error"><%= req.session.error %></div>
<% delete req.session.error; } %>

<% if (req.session.success) { %>
    <div class="notice notice-success"><%= req.session.success %></div>
<% delete req.session.success; } %>

<div class="spacer50"></div>

<div class="container text-center">

    <!-- Logo + Punchline -->
    <div class="col-md-6 col-md-offset-3">
        <div class="page-header">
            <h1><strong>Unicorn.</strong> <br/> <small>Manage your music like a boss</small></h1>
        </div>

        <div class="spacer10"></div>

        <div>
            Please login
        </div>

        <div class="spacer10"></div>

        <hr>

        <form method="post" action="/admin/login-exec">
            <input type="password" class="form-control input-lg" name="password" autocomplete="off" spellcheck="false" />
            <input type="hidden" name="redirect-to" value="<%= req.session.redirectTo %>" />
            <br/>
            <button type="submit" class="btn btn-lg btn-primary w100">Log in</button>
        </form>

        <div class="spacer40"></div>

    </div>
</div>
